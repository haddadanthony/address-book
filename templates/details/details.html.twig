{% extends "base.html.twig" %}
{% block body %}
	<div class="card m-3 p-3">
		<div class="card-body d-flex flex-column align-items-center">
			<img src="/{{contact.getImgSrc()}}" style="width: 150px; height: 150px; border-radius: 50%" alt="contact-image" class="card-img-top">
			<h3 class="card-title">{{contact.getFirstName()|capitalize}}
				{{contact.getLastName()|capitalize}}</h3>
			<p class="card-text">
				<strong>Street:
				</strong>
				{{contact.getStreet()}}</p>
			<p class="card-text">
				<strong>Zip Code:
				</strong>
				{{contact.getZipCode()}}</p>
			<p class="card-text">
				<strong>City:
				</strong>
				{{contact.getCity()}}</p>
			<p class="card-text">
				<strong>Country:
				</strong>
				{{contact.getCountry()}}</p>
			<p class="card-text">
				<strong>Phone Number:
				</strong>
				{{contact.getPhoneNumber()}}</p>
			<p class="card-text">
				<strong>Birthdate:
				</strong>
				{{contact.getBirthDate()|date("m/d/Y")}}</p>
			<p class="card-text">
				<strong>Email:
				</strong>
				{{contact.email()}}</p>
			<div>
				<a href="{{path('delete_contact', {id: contact.getId()})}}" class="btn btn-outline-danger">Delete</a>
				<a href="{{path('edit_contact', {id: contact.getId()})}}" class="btn btn-outline-success">Edit</a>
			</div>
		</div>
	</div>
{% endblock %}
